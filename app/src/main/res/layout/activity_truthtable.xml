<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TruthTableActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conjuntionValue"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/conjuntionValue" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SubmitValue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:layout_width="290dp"
        android:layout_height="330dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.306">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/AValue"
                android:textSize="24sp"
                tools:text="@string/AValue" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/AValue"
                android:textSize="24sp"
                tools:text="@string/BValue" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/EquationValue"
                android:textSize="24sp"
                tools:text="@string/EquationValue" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/FalseValue"
                android:textSize="24sp"
                tools:text="@string/FalseValue" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/TrueValue"
                android:textSize="24sp"
                tools:text="@string/TrueValue" />

            <EditText
                android:id="@+id/edAnswer1"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:digits="T,F"
                android:ems="3"
                android:gravity="center"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/FalseValue"
                android:textSize="24sp"
                tools:text="@string/FalseValue" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/TrueValue"
                android:textSize="24sp"
                tools:text="@string/TrueValue" />

            <EditText
                android:id="@+id/edAnswer2"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:digits="T,F"
                android:ems="3"
                android:gravity="center"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/FalseValue"
                android:textSize="24sp"
                tools:text="@string/FalseValue" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/TrueValue"
                android:textSize="24sp"
                tools:text="@string/TrueValue" />

            <EditText
                android:id="@+id/edAnswer3"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:digits="T,F"
                android:ems="3"
                android:gravity="center"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/FalseValue"
                android:textSize="24sp"
                tools:text="@string/FalseValue" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/TrueValue"
                android:textSize="24sp"
                tools:text="@string/TrueValue" />

            <EditText
                android:id="@+id/edAnswer4"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:digits="T,F"
                android:ems="3"
                android:gravity="center"
                android:inputType="text" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>